<%- include('nav.ejs') %>
<div class="container-fluid bg-white p-3">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center bg-warning text-dark font-weight-bold shadow">Portfolio </h1>
        </div>
    </div>
</div>	






<div class="container">
    <div class="row mt-5 ">
        <form action="/admin/portfolio" method="post" enctype="multipart/form-data" >

        <div class="col-md-12 float-left">
            <h4>Add Image</h4>
        </div>
          
             <div class="col-md-6 mt-4 float-left">
                <label>Select Image</label>
                <input type="file"  accept="image/*" name="portfolio_img" class="form-control ">
             </div>
             <div class="col-md-12 float-left text-center mt-4">
                <button class="btn btn-primary" type="submit">Save </button>
              </div>
         
            </form>
    </div>
</div>


<div class="container">
    <div class="row mt-5">
        <div class="col-md-12">
           
            <table class="table table-bordered table-hover table-striped">
               <tr class="text-dark">
                <th>Action</th>
                <th>Sr.No.</th>
                <th>Image</th>
              
               </tr>

     <% for(i=0;i<port_fo.length;i++) { %>
        <tr class="text-dark">
            <td>
                <a href="/admin/delete_portfolio?portfolio_id=<%= port_fo[i].portfolio_id %>"><i class="fa fa-trash btn btn-danger"></i></a>
            </td>
            <td><%= i+1 %></td>
            <td>
             <img src="/uploads/<%= port_fo[i].port_folio %>" height="100px" width="100px">
            </td>
        
          
        </tr>
    
      <% } %>

            </table>
        </div>
    </div>
</div>
<%- include('footer.ejs') %>     