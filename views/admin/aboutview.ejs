<%- include('nav.ejs') %>
<div class="container-fluid bg-white p-3">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center bg-warning text-dark font-weight-bold shadow">Our View</h1>
        </div>
    </div>
</div>	

<div class="container">
    <div class="row mt-5 mb-5">
            <form action="/admin/saveview_card" method="post" enctype="multipart/form-data" >
                <div class="col-md-12 float-left mt-3">
                    <label>Enter Card Title</label>
                    <input type="text" class="form-control" name="viewtitle" required>
                </div>
                <div class="col-md-12 float-left mt-3">
                    <label>Enter Card Discription</label>
                    <textarea rows="2" class="form-control" name="viewdisc"  required></textarea>
                </div> 
                <div class="col-md-12 float-left mt-3">
                    <label>Select Card Image/logo</label>
                    <input type="file" accept="image/*" class="form-control" name="viewimg"  required>
                </div>
                <div class="col-md-12 float-left">
                    <button class="btn btn-primary  mt-4">Add View</button>
                </div>
            </form>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped table-hover">
                <tr>
            <th>Action</th>
            <th>Sr. No.</th>
            <th>View Title</th>
            <th>View Discription</th>
            <th>Image</th>
        </tr>
            <% for(i=0;i<about_view.length;i++) { %>
                  <tr>
                <td>
                    <a href="/admin/edit_abview?about_view_id=<%= about_view[i].about_view_id %>"><i class="fa fa-edit btn btn-primary btn-sm mt-2 ml-2"></i></a>
                    <a href="/admin/delete_abview?about_view_id=<%= about_view[i].about_view_id %>"><i class="fa fa-trash btn btn-danger btn-sm mt-2 ml-2"></i></a>
                </td>
                <td><%= i+1 %></td>
                <td><%= about_view[i].viewtitle %></td>
                <td><%= about_view[i].viewdisc %></td>
                <td>
                <img src="/uploads/<%= about_view[i].view_img %>" height="100px" width="100px">
                </td>
            </tr>
           <% } %>
        </table>
        </div>
    </div>
</div >

<%- include('footer.ejs') %>     