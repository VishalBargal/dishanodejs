<%- include('nav.ejs') %>
<div class="container-fluid bg-white p-3">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center bg-warning text-dark font-weight-bold shadow">Services Card </h1>
        </div>
    </div>
</div>	
<div class="container">
    <div class="row mt-5 mb-5">
            <form action="/admin/saveservice_card" method="post" enctype="multipart/form-data" >
                <div class="col-md-12 float-left mt-3">
                    <label>Enter Card Title</label>
                    <input type="text" class="form-control" name="chead" >
                </div>
                <div class="col-md-12 float-left mt-3">
                    <label>Enter Card Discription</label>
                    <textarea rows="2" class="form-control" name="cdisc" ></textarea>
                </div> 
                <div class="col-md-12 float-left mt-3">
                    <label>Select Card Image/logo</label>
                    <input type="file" accept="image/*" class="form-control" name="cimg" >
                </div>
                <div class="col-md-12 float-left">
                    <button class="btn btn-primary  mt-4">Add Card</button>
                </div>
            </form>
    </div>
</div>	

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped table-hover mt-5" >

                <tr>
                    <th>Sr.No.</th>
                    <th>Action</th>
                    <th>Card Title</th>
                    <th>Card Discription</th>
                    <th>Card Image</th>
                </tr>
                <% for(i=0;i<card_data.length;i++) { %> 
                    
                    <tr>
                        <td><%= i+1 %></td>
                        <td>
                            <a href="/admin/delete_hservicard?service_card_id=<%= card_data[i].service_card_id %>">
                                <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
                            </a>
                        </td>
                        <td><%= card_data[i].chead %></td>
                        <td><%= card_data[i].cdisc %></td>
                        <td><img src="/uploads/<%= card_data[i].card_img %>" height="50px" width="100px"></td>
                        <!-- <td><%= card_data[i].cimg %></td> -->
                    </tr>
                <% } %>
             </table>
        </div>
    </div>
</div>

<%- include('footer.ejs') %>     